<?xml version="1.0" encoding="utf-8"?>

<!-- DRAWS A BORDER BOX AROUND A LAYOUT ITEM -->
<!-- usage: android:background="@drawable/border" -->

<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <stroke
        android:width="1dp"
        android:color="#f2f2f2" />

    <solid android:color="#f2f2f2" />

    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <corners android:radius="3dp" />

</shape>