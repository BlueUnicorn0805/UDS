                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/radioGroupPackageType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/radioNone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="None"/>

                            <CheckBox
                                android:id="@+id/radioCold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cold "/>

                            <CheckBox
                                android:id="@+id/radioHot"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Hot "/>
                        </LinearLayout>

                        <hawaiiappbuilders.c.view.OpenSansBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding2"
                            android:checked="true"
                            android:gravity="center_vertical"
                            android:text="Instructions/Codes(Temporary)"
                            android:textColor="@color/app_grey_dark"
                            android:textSize="@dimen/font_6" />

                        <hawaiiappbuilders.c.view.OpenSansEditText
                            android:id="@+id/edtInstructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_inputbox"
                            android:gravity="top"
                            android:minHeight="70dp"
                            android:padding="@dimen/padding1"
                            android:text=""
                            android:textColor="@color/app_grey_dark"
                            android:textSize="@dimen/font_7" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding2"
                        android:orientation="horizontal">

                        <hawaiiappbuilders.c.view.OpenSansButton
                            android:id="@+id/btnCancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padding1"
                            android:layout_weight="1"
                            android:background="@drawable/selector_blueround"
                            android:minHeight="41dp"
                            android:text="CANCEL"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_6"
                            android:visibility="gone" />

                        <hawaiiappbuilders.c.view.OpenSansButton
                            android:id="@+id/btnOk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_blueround"
                            android:minHeight="45dp"
                            android:text="Request New Delivery"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>