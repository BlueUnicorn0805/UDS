<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@drawable/scrim"-->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways">

            <include layout="@layout/toolbar_layout" />

        </FrameLayout>

        <!--</android.support.design.widget.CollapsingToolbarLayout>-->
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding5"
            android:layout_marginLeft="@dimen/padding5"
            android:layout_marginTop="@dimen/padding5"
            android:layout_marginEnd="@dimen/padding5"
            android:layout_marginRight="@dimen/padding5"
            android:gravity="center"
            android:orientation="vertical">

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:id="@+id/tvParams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                tools:text="Title"
                android:textColor="@color/app_grey_dark"
                android:textColorHint="@color/app_grey"
                android:textSize="@dimen/font_4"
                android:textStyle="italic" />

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:id="@+id/tvFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                tools:text="Message"
                android:textColor="@color/app_grey_dark"
                android:textColorHint="@color/app_grey"
                android:textSize="@dimen/font_4"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
