<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="3dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:contentPadding="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delivery Complete"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/padding1"
                android:background="@color/app_divider" />

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:id="@+id/tvCompleteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:text="Completed!"
                android:textColor="@color/app_grey"
                android:textSize="@dimen/font_7" />

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:id="@+id/tvCompleteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:text="From address To address"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/font_8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/padding1"
                android:background="@color/app_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <hawaiiappbuilders.c.view.OpenSansTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Package picked up in reasonable amount of time?"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="@dimen/font_7" />

                <RadioGroup
                    android:id="@+id/groupOnTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btnOnTimeYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:checked="true"
                        android:text="Yes"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_8" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btnOnTimeNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding3"
                        android:gravity="center"
                        android:checked="false"
                        android:text="No"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_8" />
                </RadioGroup>

                <hawaiiappbuilders.c.view.OpenSansTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:text="Delivery was completed as described?"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="@dimen/font_7" />

                <RadioGroup
                    android:id="@+id/groupComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btnCompleteYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:checked="true"
                        android:text="Yes"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_8" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btnCompleteNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding3"
                        android:gravity="center"
                        android:checked="false"
                        android:text="No"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_8" />
                </RadioGroup>

                <hawaiiappbuilders.c.view.OpenSansTextView
                    android:id="@+id/tvFavDriverTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:text="Do want to add driver as a favorite?"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="@dimen/font_7" />

                <RadioGroup
                    android:id="@+id/groupAddFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btnFavYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:checked="true"
                        android:text="Yes"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_8" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/btnFavNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding3"
                        android:gravity="center"
                        android:checked="false"
                        android:text="No"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_8" />
                </RadioGroup>
            </LinearLayout>

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                android:gravity="center"
                android:text="Rate the driver"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_7" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding2"
                android:isIndicator="false"
                android:numStars="5"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                android:rating="0"
                android:stepSize="1.0"
                android:theme="@style/RatingBar" />

            <hawaiiappbuilders.c.view.OpenSansTextView
                android:id="@+id/tvErrorRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Error, please rate the driver"
                android:textColor="@color/app_red"
                android:textSize="@dimen/font_8" />

            <hawaiiappbuilders.c.view.OpenSansBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                android:gravity="center"
                android:text="Tip"
                android:visibility="visible"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_1" />

            <hawaiiappbuilders.c.view.OpenSansBoldEditText
                android:id="@+id/edtTips"
                android:layout_width="match_parent"
                android:hint="0"
                android:textSize="@dimen/font_1"
                android:visibility="visible"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textColor="@color/app_grey_dark"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                android:orientation="horizontal">
                <hawaiiappbuilders.c.view.OpenSansButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blueround"
                    android:minHeight="41dp"
                    android:text="CANCEL"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_6" />

                <hawaiiappbuilders.c.view.OpenSansButton
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blueround"
                    android:minHeight="41dp"
                    android:text="OK"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_6" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>

