<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/intro_img_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_splash_guys" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:fontFamily="@font/productsans_regular"
            android:text="Deliver Parcel and Food, Taxi and NEMT"
            android:textColor="@color/app_grey_dark"
            android:textSize="@dimen/font_11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="@dimen/padding3"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="@dimen/padding1"
            android:text="You can specialize and deliver any of the options, or deliver all and have as much work as you want! \n\nBusy is good!"
            android:textSize="@dimen/font_intro_content" />

    </LinearLayout>
</ScrollView>