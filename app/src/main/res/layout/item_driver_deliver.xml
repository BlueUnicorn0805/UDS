<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding1"
    android:paddingLeft="@dimen/padding3"
    android:paddingRight="@dimen/padding3"
    android:paddingStart="@dimen/padding3"
    android:paddingEnd="@dimen/padding3"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/padding1"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivType"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="@dimen/padding1"
        android:src="@drawable/ic_home_mydels" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding1"
        android:orientation="vertical">

        <hawaiiappbuilders.c.view.OpenSansTextView
            android:id="@+id/txtFromAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding1"
            android:textSize="@dimen/font_6"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            android:text="Started Time : 2018-02-18 09:20"/>

        <hawaiiappbuilders.c.view.OpenSansTextView
            android:id="@+id/txtToAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding1"
            android:textSize="@dimen/font_6"
            android:text="Ended Time : 2018-02-18 09:20"
            android:textColor="@android:color/white"/>

        <hawaiiappbuilders.c.view.OpenSansTextView
            android:id="@+id/txtDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding1"
            android:textSize="@dimen/font_8"
            android:layout_gravity="bottom"
            android:text="Work Hour : 2h"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>