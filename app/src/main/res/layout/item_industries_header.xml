<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding2"
    android:paddingLeft="@dimen/padding2"
    android:paddingEnd="@dimen/padding2"
    android:focusable="false"
    android:paddingRight="@dimen/padding2">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/padding2"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/padding1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/padding1"
            android:paddingBottom="@dimen/padding1"
            android:paddingLeft="@dimen/padding4"
            android:orientation="horizontal">

            <hawaiiappbuilders.c.view.OpenSansBoldTextView
                android:id="@+id/tvIndustryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PoZip Restaurant"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_6" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



