<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/push_activity_anima</item>

        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="AppThemeNoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/push_activity_anima</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">#80303030</item>
        <item name="colorControlActivated">#303030</item>
        <item name="colorControlHighlight">#303030</item>

        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <!-- If you want you can override only colorAccent -->
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- Or you can change very item color -->
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimary</item>
        <item name="android:dayOfWeekTextAppearance">@color/colorPrimary</item>
        <item name="android:headerMonthTextAppearance">@color/colorPrimary</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/colorPrimary</item>
        <item name="android:headerYearTextAppearance">@color/colorPrimary</item>
        <item name="android:yearListItemTextAppearance">@color/colorPrimary</item>
        <item name="android:yearListSelectorColor">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorPrimary</item>
    </style>

</resources>
